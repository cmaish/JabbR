@using JabbR;

    <form class="form-horizontal" action="@Url.Content("~/account/login")" method="post">
        @Html.ValidationSummary()
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-user"></i></span>
                    @Html.TextBox("username", "span10", @LanguageResources.Account_UserName)
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-lock"></i></span>
                    @Html.Password("password", "span10", @LanguageResources.Account_Pass)
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">@LanguageResources.Account_SignIn</button>
            </div>
        </div>
        @if (Model.AllowUserRegistration || Model.AllowUserResetPassword)
        { 
            <div class="control-group">
                <div class="controls">                    
                    @if (Model.AllowUserRegistration)
                    {
                        @{{
                            string registerMessage = Encoder.HtmlEncode(LanguageResources.Account_RegisterMessage);
                            string anchorContent = String.Format("<a href=\"{0}\">", Url.Content("~/account/register"));
                            @Html.Raw(String.Format(registerMessage, anchorContent, "</a>"))
                         }}
                    }
                    @if (Model.AllowUserResetPassword && Model.HasEmailSender)
                    { 
                        <p>
                            <a href="@Url.Content("~/account/requestresetpassword")">Reset password</a> if you've forgotten or lost your login information.       
                        </p>   
                    }
                </div>
            </div>
        }
        @Html.AntiForgeryToken()
    </form>
